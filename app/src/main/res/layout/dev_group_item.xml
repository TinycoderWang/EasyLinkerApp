<?xml version="1.0" encoding="utf-8"?>
<wang.tinycoder.easylinkerapp.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swm_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">
        <!-- 图标 -->
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/ic_dev_group" />


        <LinearLayout
            android:id="@+id/ll_group_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 组名称 -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                tools:text="组名称" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/dp_16"
                tools:text="组描述" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/dp_18"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <!-- 操作 -->
    <TextView
        android:id="@+id/tv_manage"
        android:layout_width="@dimen/dp_68"
        android:layout_height="match_parent"
        android:background="@color/tab_blue"
        android:gravity="center"
        android:text="更新"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18" />


</wang.tinycoder.easylinkerapp.widget.SwipeMenuLayout>